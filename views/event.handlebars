<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <div class="card mt-4">
                <div class="card">
                    {{!-- <div class="card-image waves-effect waves-block waves-light">
                        <img class="activator" src="/images/movie.jpg">
                    </div> --}}
                    <div class="card-content">
                        <h1>
                            <p id="namelink">{{sel_event.name}}</p>
                        </h1>
                    </div>
                </div>
                <div class="card-tabs">
                    {{!-- <ul class="tabs tabs-fixed-width">
                            <li class="tab"><a href="#test10">Movie Title</a></li>
                            <li class="tab"><a class="active" href="#test4">Date and Time</a></li>
                            <li class="tab"><a href="#test5">Location</a></li>
                            <li class="tab"><a href="#test6">Description</a></li>
                            <li class="tab"><a href="#test7">Host</a></li>
                        </ul> --}}
                </div>
                <div id="grid-container">
                    <div id="test7"><b>HOST:</b> {{sel_event.fullname}}</div>
                    <div id="test4"><b>DATE:</b> {{sel_event.eventDate}}</div>
                    <div id="test4"><b>TIME:</b> {{sel_event.time}}</div>
                    <div id="test5"><b>LOCATION:</b>{{sel_event.location}}</div>
                    <div id="test6"><b>DESCRIPTION:</b> {{sel_event.description}}</div>

                </div>
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-md-6 offset-3">
            <div class="card text-center shadow-lg">
                <label for="comment">Invitees</label>
                <ul id="invitee-list" class="list-group-item d-flex justify-content-center">
                    {{#each invitee}}
                    <li>
                        {{!-- {{this.firstname}} {{this.lastname}} --}}
                        {{dataValues.firstname}} {{dataValues.lastname}}
                    </li>
                    {{/each}}
                </ul>
            </div>    
            <form class="clearfix mb-4" action="POST">
                <div class="form-group">
                    <label for="comment">Comments</label>
                    <textarea class="form-control" id="comment" aria-describedby="example-description"
                        placeholder="Whats on your mind?"></textarea>
                </div>
                <button id="submitComment" class="btn btn-primary float-right">Submit</button>
            </form>
            <ul id="comment-list" class="list-group chat">
                {{#each comment mode="prepend"}}
                {{log this.body}}
                <li data-id="{{sel_event.id}}" class="list-group-item">
                    <span>{{dataValues.username}}:</span> {{dataValues.body}}
                    {{!-- <a href="event/{{this.id}}">{{this.name}}</a> --}}
                </li>
                {{/each}}

            </ul>
            <a href="/members">‚Üê Back To the List of the Events</a>
        </div>
    </div>
</div>

<input type="hidden" id="event-id" value={{sel_event.id}} />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/event.js"></script>
<script src="/js/members.js"></script>

</div>




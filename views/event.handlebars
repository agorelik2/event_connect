<div class="container-fluid " id="contact">
    <div class="section-content">
				<h1 class="section-header">Plan an event with <span class="content-header " data-wow-delay="0.2s" data-wow-duration="2s"> Econnect</span></h1>
				<h3></h3>
			
<div class="row justify-content-center m-5">
        <div class="col-md-6 ">
            <h2 >Welcome <span class="member-name"></span></h2>
        </div>
    
    </div>
       </div>
<div class="container-fluid shadow-lg justify-content-center w-50 p-5">
   <div class=" card ">
    <div class="row justify-content-center ">
        <div class="col-md-12">      
                  
                    <div class="card-content justify-content-center p-0">
                        <h2 class="shadow-lg">
                            <p class="card-header"id="namelink">{{sel_event.name}}</p>
                        </h2>
                    </div>
                
                <div class="card-body bg-white shadow-lg ">
                    
                
                <div id="grid-container ">
                    <div class="card-text text-dark"id="test7"><b>Host: </b> {{sel_event.fullname}}</div>
                    <div class="text-dark" id="test4"><b>Time: </b> {{sel_event.time}}</div>
                    <div class="text-dark" id="test5"><b>Location: </b>{{sel_event.location}}</div>
                    <div class="text-dark" id="test6"><b>Description: </b> {{sel_event.description}}</div>

                </div> 
                </div>
           

        </div>
    </div>
   </div>

    <div class="row">
        <div class="col-md-12" id="center">
        
                <h3 class="justify-content-left" for="comment">Invitees</h3>
                <ul id="invitee-list" class="list-group-item ">
                    {{#each invitee}}
                    <li class="text-dark">
                        {{!-- {{this.firstname}} {{this.lastname}} --}}
                        {{dataValues.firstname}} {{dataValues.lastname}}
                    </li>
                    {{/each}}
                </ul>
           
            <form class="clearfix mb-4" action="POST">
                <div class="form-group">
                    <h3 for="comment">Comments</h3>
                    <textarea class="form-control" id="comment" aria-describedby="example-description"
                        placeholder="Whats on your mind?"></textarea>
                </div>
                <button id="submitComment" class="btn btn-primary float-right">Submit</button>
            </form>
            <ul id="comment-list" class="list-group chat">
                {{#each comment mode="prepend"}}
                {{log this.body}}
                <li data-id="{{sel_event.id}}" class="list-group-item text-dark">
                    <span>{{dataValues.username}}:</span> {{dataValues.body}}
                    {{!-- <a href="event/{{this.id}}">{{this.name}}</a> --}}
                </li>
                {{/each}}

            </ul>
            <a href="/members">‚Üê Back To the List of the Events</a>
        </div>
    </div>
    </div>
</div>

<input type="hidden" id="event-id" value={{sel_event.id}} />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/event.js"></script>
<script src="/js/members.js"></script>

</div>



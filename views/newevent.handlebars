<div class="container">

    <div class="row">
        <div class="col-md-6 col-md-offset-3">

            <h2>Create New Event</h2>
            <br>

            <br>
            <div class="row">
                <form class="col-md-12 form-group">
                    <div class="row">
                        <div class="input-field col">
                            <label for="event_name">Event Name</label>
                            <input id="eventname-input" type="text">

                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col">
                            {{!-- <label for="event_date">Event Date and Time (YYYY-MM-DD HR:MM:SS)</label> --}}
                            <label for="event_date">Date</label>
                            <input id="eventdate-input" type="text">
                        </div>

                    </div>
                    <div class="row">
                        <div class="input-field col">
                            {{!-- <label for="event_date">Event Date and Time (YYYY-MM-DD HR:MM:SS)</label> --}}
                            <label for="event_time">Time</label>
                            <input id="eventtime-input" type="text">
                        </div>

                    </div>
                    <div class="row">
                        <div class="input-field col">
                            <label for="location">Location</label>
                            <input id="location-input" type="text">
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col">
                            <label for="descripton">Description</label>
                            <input id="description-input" type="text">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col">
                            <label for="invited">Invite your friends:</label>
                            <select multiple class="form-control" id="invited-input">
                                {{#each users}}
                                <option value="{{this.id}}">{{this.firstname}} {{this.lastname}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <button type="submit" id="newevent" class="button">Submit</button>

                </form>
            </div>
            <button class="testbutton">TEST</button>
        </div>
    </div>
</div>
